# Copy this file to .env.docker and fill in the real secrets before running Docker locally
SECRET_KEY=django-insecure-change-me
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_LOG_LEVEL=INFO

# Database & cache (set to Supabase when using remote DB)
# Local Compose DB: postgresql://cms_admin:cms_admin_password@postgres:5432/cms_backend
# Supabase example:  postgresql://[user]:[password]@db.xxxxx.supabase.co:5432/postgres?sslmode=require
DATABASE_URL=postgresql://cms_admin:cms_admin_password@postgres:5432/cms_backend
REDIS_URL=redis://redis:6379/0

# Optional external URLs (update if you have deployed frontends)
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# Chatbot / Gemini
GEMINI_API_KEY=replace-with-gemini-key
GENAI_MODEL=text-bison-001
MAX_MESSAGES_PER_SESSION=50

# Email settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=replace-with-app-password
DEFAULT_FROM_EMAIL=your-email@example.com
ADMIN_ALERT_EMAIL=alerts@example.com

# Admin auto-provisioning (optional)
SUPERUSER_USERNAME=admin
SUPERUSER_EMAIL=admin@example.com
SUPERUSER_PASSWORD=admin123
